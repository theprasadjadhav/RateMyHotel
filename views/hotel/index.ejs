<% layout("layout/boilerplate") -%>
    <div class="row">
        <% for(let hotel of hotels) {%>
        <div class="col-xl-3 col-md-4 col-sm-6 d-flex flex-column flex-sm-row align-items-stretch mb-3">
            <div class="card">
                <img src="<%= hotel.photo1 %>" class="card-img-top" style="width:100%; height:250px" alt="...">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><%= hotel.hotel_name %></h5>
                    <p class="card-text"><%= hotel.rating_average %> / 10</p>
                    <a href="/hotels/<%= hotel._id %>" class="btn btn-outline-info mt-auto ">View</a>
                </div>
            </div>
        </div>
        <% } %>
    </div>

    <a class="btn btn-success mb-3" href="/hotels/new">create new</a>
    
